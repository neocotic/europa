{
  "name": "europa-build",
  "version": "5.0.1",
  "description": "Tool for generating and maintaining Europa plugins and presets",
  "keywords": [
    "europa",
    "plugin",
    "preset",
    "build",
    "generate"
  ],
  "homepage": "https://github.com/neocotic/europa",
  "bugs": {
    "url": "https://github.com/neocotic/europa/issues"
  },
  "license": "MIT",
  "author": {
    "name": "neocotic",
    "url": "https://github.com/neocotic"
  },
  "funding": [
    {
      "type": "individual",
      "url": "https://github.com/sponsors/neocotic"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/neocotic"
    }
  ],
  "main": "lib/cjs/index",
  "module": "lib/esm/index",
  "bin": {
    "europa-build": "bin/europa-build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neocotic/europa.git",
    "directory": "packages/europa-build"
  },
  "dependencies": {
    "commander": "^9.2.0",
    "del": "^6.0.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^4.1.0",
    "mkdirp": "^1.0.4",
    "mustache": "^4.2.0",
    "prettier": "^2.6.2",
    "read-pkg-up": "^7.0.1",
    "typescript": "^4.6.4",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/mkdirp": "^1.0.2",
    "@types/mustache": "^4.1.2",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "del-cli": "^4.0.1",
    "ts-node": "^10.7.0",
    "ttypescript": "^1.5.13",
    "typescript-transform-paths": "^3.3.1"
  },
  "scripts": {
    "build": "del lib && npm run build:cjs && npm run build:esm",
    "build:cjs": "ttsc --p tsconfig.build.cjs.json",
    "build:esm": "ttsc --p tsconfig.build.esm.json",
    "flint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "echo \"No tests\""
  },
  "engines": {
    "node": "^12.20.0 || >=14"
  }
}
