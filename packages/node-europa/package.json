{
  "name": "node-europa",
  "version": "5.0.0",
  "description": "Node.js module for converting HTML into valid Markdown via Europa",
  "keywords": [
    "html",
    "markdown",
    "convert",
    "converter"
  ],
  "homepage": "https://github.com/neocotic/europa",
  "bugs": {
    "url": "https://github.com/neocotic/europa/issues"
  },
  "license": "MIT",
  "author": {
    "name": "neocotic",
    "url": "https://github.com/neocotic"
  },
  "funding": [
    {
      "type": "individual",
      "url": "https://github.com/sponsors/neocotic"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/neocotic"
    }
  ],
  "main": "lib/cjs/index",
  "module": "lib/esm/index",
  "bin": {
    "europa": "bin/europa"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neocotic/europa.git",
    "directory": "packages/node-europa"
  },
  "dependencies": {
    "commander": "^9.2.0",
    "europa-core": "^5.0.0",
    "glob": "^8.0.1",
    "jsdom": "^19.0.0",
    "mkdirp": "^1.0.4",
    "read-pkg-up": "^7.0.1"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jasmine": "^4.0.3",
    "@types/jsdom": "^16.2.14",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "europa-test": "^5.0.0",
    "jasmine": "^4.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.6.4",
    "typescript-transform-paths": "^3.3.1"
  },
  "scripts": {
    "build": "rimraf lib && npm run build:cjs && npm run build:esm",
    "build:cjs": "ttsc --p tsconfig.build.cjs.json",
    "build:esm": "ttsc --p tsconfig.build.esm.json",
    "flint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "node -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jasmine"
  },
  "engines": {
    "node": "^12.20.0 || >=14"
  }
}
