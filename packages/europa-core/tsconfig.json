{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "europa-core/*": ["src/*"]
    },
    "lib": [
      "DOM",
      "DOM.Iterable"
    ],
    "incremental": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  }
}
