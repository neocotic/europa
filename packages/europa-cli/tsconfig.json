{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "europa-cli/*": ["src/*"]
    },
    "lib": [
      "ES2017"
    ],
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  }
}
